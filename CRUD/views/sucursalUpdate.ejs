        type="text"
        id="municipio"
        name="municipio"
        value="<%= `${sucursal.municipio}` %>"
      /><br /><br />
      <label for="colonia">Colonia:</label>
      <input
        type="text"
        id="colonia"
        name="colonia"
        value="<%= `${sucursal.colonia}` %>"
      /><br /><br />
      <label for="calle">Calle:</label>
      <input
        type="text"
        id="calle"
        name="calle"
        value="<%= `${sucursal.calle}` %>"
      /><br /><br />
      <label for="codigoPostal">CÃ³digo postal:</label>
      <input
        type="text"
        id="codigoPostal"
        name="codigoPostal"
        value="<%= `${sucursal.codigoPostal}` %>"
      /><br /><br />
      <label for="objId">ID:</label>
      <input
        type="text"
        id="objId"
        name="objId"
        value="<%= `${sucursal._id}` %>"
      /><br /><br />
